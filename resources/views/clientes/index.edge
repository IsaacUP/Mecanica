<div >
    <div class="col s7 push-s2">
        <h1> Lista de clientes </h1>
        <a class="waves-effect waves-light btn-large" href="/clientes/crear">Crear Nuevo</a>
        <table class="striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Dirección</th>
                    <th>Teléfono</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @each(cliente in clientes)
                <tr>
                    <th>{{cliente.cliente}}</th>
                    <th>{{cliente.direccion}}</th>
                    <th>{{cliente.telefono}}</th>
                    <th>
                        <a class="waves-effect waves-teal btn-flat" href="/clientes/editar/{{cliente.id}}">Editar</a>
                        <a class="waves-effect waves-teal btn-flat" href="/clientes/eliminar/{{cliente.id}}">Eliminar</a>
                    </th>
                </tr>
                @endeach
            </tbody>
        </table>
    </div>
